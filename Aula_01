--CONECTANDO BANCO

USE EMPRESA
GO

--CRIANDO TABELA

CREATE TABLE ALUNO(
	IDALUNO INT PRIMARY KEY IDENTITY,
	NOME VARCHAR(30) NOT NULL,
	SEXO CHAR(1) NOT NULL,
	EMAIL VARCHAR(30)
)
GO

--CONSTRAINTS ALTERNATIVA AO ENUM

ALTER TABLE ALUNO
ADD CONSTRAINT CK_SEXO CHECK (SEXO IN('M','F'))

--1 * 1

CREATE TABLE ENDERECO(
	IDENDERECO INT PRIMARY KEY IDENTITY(100,10),
	BAIRRO VARCHAR(30),
	UF CHAR(2) NOT NULL,
	CHECK (UF IN('RJ','SP')),
	ID_ALUNO INT UNIQUE
)
GO

--CRIANDO A FK

ALTER TABLE ENDERECO ADD CONSTRAINT FK_ENDERECO_ALUNO
FOREIGN KEY(ID_ALUNO) REFERENCES ALUNO(IDALUNO)
GO

--COMANDOS DE DESCRIÇÃO
--PROCEDURES COMEÇAM COM 'SP' STORAGE PROCEDURES

SP_COLUMNS ALUNO
GO

SP_HELP ALUNO -- INFORMAÇÕES SOBRE A TABLE
GO


INSERT INTO ALUNO VALUES(
	'ANDRE','M','1980/12/23','ANDRE@.COM'
)
GO

INSERT INTO ENDERECO VALUES(
	'RUA DAS COISAS','RJ',2
)
GO

SELECT*FROM ALUNO
GO

SELECT*FROM ENDERECO
GO
